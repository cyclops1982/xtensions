{
  "swagger": "2.0",
  "x-ntx-render-version": 2,
  "info": {
    "version": "1.1.1",
    "title": "RestCountries v2",
    "description": "Simple example of rest countries"
  },
  "host": "restcountries.eu",
  "basePath": "/rest/v2/",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/all?fields={fields}": {
      "get": {
        "summary": "Get all countries",
        "description": "All Countries",
        "operationId": "get_all_countries",
        "parameters": [
          {
            "in": "path",
            "type": "string",
            "name": "fields",
            "required": true,
            "default": "name;region;alpha3Code"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/countryarray"
            },
            "x-ntx-summary": "Result"
          }
        }
      }
    }
  },
  "definitions": {
    "countryarray": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/countrydetails"
      }
    },
    "countrydetails": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "alpha3Code": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      }
    }
  }
}
